<h1>Alle Benutzer</h1>
<%= link_to "Home", root_path %>

<table class="normal">
  <tr>
    <th>ID</th>
    <th>Benutzername</th>
    <th>Postings</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= link_to user.name, user %></td>
    <td><%= user.postings.count %></td>
    <td><%= link_to 'Show', user %></td>
  </tr>
<% end %>
</table>

