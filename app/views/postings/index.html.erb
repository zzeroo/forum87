<h1>Alle Postings</h1>
<%= link_to "Home", root_path %>

<table class="normal" border=1>
  <tr>
    <th>ID</th>
    <th>&Uuml;berschrift</th>
    <th></th>
  </tr>

  <% @postings.each do |posting| %>
  <tr>
    <td><%= posting.id %></td>
    <td><%= posting.subtitle %></td>
    <td><%= link_to 'Show', posting %></td>
  </tr>
  <tr>
    <td colspan=3><%= posting.content %></td>
  </tr>
<% end %>
</table>

